<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/adapter_news_item_image_iv"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:src="@drawable/bd"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/adapter_news_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头"
        android:textSize="13dp"
        android:layout_toRightOf="@+id/adapter_news_item_image_iv"
        android:layout_alignTop="@+id/adapter_news_item_image_iv"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/adapter_news_item_author_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/adapter_news_item_image_iv"
        android:layout_alignBottom="@+id/adapter_news_item_image_iv"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/adapter_news_item_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/adapter_news_item_image_iv"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>